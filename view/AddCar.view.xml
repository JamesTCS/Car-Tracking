<core:View 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	controllerName="tcs.cartracker.controller.AddCar">
	
	<Page title="Add New Vehicle" >
	    
        <f:SimpleForm>
        <f:content>
          <Label text="Car Name" />
          <Input id="name" type="Text" width="200px" />
          
          <Label text="Current Miles" />
          <Input id="miles" type="Text" width="200px" />
          
          <Label text="" />
          <Button text="Add" width="200px" press="addCar" />
          
        </f:content>
      </f:SimpleForm>
    </Page>
	
</core:View>