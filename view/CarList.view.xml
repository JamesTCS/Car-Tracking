<core:View 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	controllerName="tcs.cartracker.controller.CarList">
	
	<Page title="vehicles" >
	    <headerContent>
	        <Button icon="sap-icon://add" press="addCar" />
	        
	    </headerContent>
	
        <List 
        id="list"
        items="{vehicleDB>/vehicles}"
        mode="SingleSelectMaster"
        select="carSelect" >
            <StandardListItem
              title="{vehicleDB>name}"
              counter="{vehicleDB>miles}"/>
        </List>
    </Page>
	
</core:View>