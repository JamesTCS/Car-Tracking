<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core" >
  <Dialog title="Update Vehicle Miles" >
    <content>
        <Label text="Current Vehicle Miles" />
        <Input id="miles" type="Number" />
    </content>
    <beginButton>
      <Button text="Update"  press="milesDialogSave" />
    </beginButton>
    <endButton>
      <Button text="Cancel"  press="onDialogCloseButton" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>